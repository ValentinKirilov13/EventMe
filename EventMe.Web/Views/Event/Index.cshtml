@model IEnumerable<EventViewModel>
@{
    ViewBag.Title = "Explore Events";
}

<h1>All available Events in EventMe</h1>

<a asp-controller="Event" asp-action="Add" class="btn btn-primary">Add Event</a>

@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 mb-3 mb-sm-0">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Start</p>
                        <p class="card-text">@item.End</p>
                        <p class ="card-text">@item.Place</p>
                        <a asp-controller="Event" asp-action="Edit" class="btn btn-warning btn-lg">Edit</a>
                        <form class="mt-2" asp-controller ="Event" asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger btn-lg"
                                    onclick="return confirm('Are you sure to delete event: @item.Name')">Delete</button>
                        </form>                       
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Don't have any Events yet</p>
}
