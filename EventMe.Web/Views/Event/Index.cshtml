@model IEnumerable<EventViewModel>
@{
    ViewBag.Title = "Explore Events";
}

<h1 class="text-center">@ViewBag.Title</h1>
<hr />
<div class="d-grid gap-2 mb-2">
<a asp-controller="Event" asp-action="Add" class="btn btn-primary">Add Event</a>

@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 mb-3 mb-sm-0">
                <div class="card" id="Mybox">
                    <div class="card-body">
                        <h3 class="card-title" id="Myname">@item.Name</h3>
                        <span class="lable">Date:</span>
                        <p class="card-text">@item.Start.ToLongDateString()</p>
                        <span class="lable">Time:</span>
                        <p class="card-text">@item.Start.ToString("hh:mm tt")</p>
                        <span class="lable">Finish at:</span>
                        <p class="card-text">@item.End.ToString("hh:mm tt")</p>
                        <span class="lable">Location:</span>
                        <p class="card-text">@item.Place</p>
                        <div class="row">
                            <div class="column1">
                                <a id="MyformEdit" asp-controller="Event" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            </div>
                            <div class="column2">
                                <form id="MyformDelete" class="mt-2" asp-controller="Event" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-danger"
                                            onclick="return confirm('Are you sure to delete event: @item.Name')">
                                        Delete
                                    </button>
                        </form>                       
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Don't have any Events yet</p>
}
