@model EventViewModel
@{
    ViewBag.Titel = "Add Event";
}

<form asp-controller="Event" asp-action="Add" method="post">  
    <input asp-for="Id" type="hidden" />
    <div class="mb-3">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Place">Place</label>
        <input asp-for="Place" />
        <span asp-validation-for="Place" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Start">Start</label>
        <input asp-for="Start.Date" />
        <span asp-validation-for="Start" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="End">End</label>
        <input asp-for="End.Date" />
        <span asp-validation-for="End" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
